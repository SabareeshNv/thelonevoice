---
import { Picture } from "astro:assets";

import notfound from "../assets/images/notfound.png";
import BaseLayout from "src/layouts/BaseLayout.astro";

const title = "404 Error - Page Not found";
const description = "Page Not found";
---

<BaseLayout {title} {description}>
    <main class="py wrapper">
        <div class="wrapper-small">
            <Picture
                src={notfound}
                alt="page not found"
                formats={["avif", "webp"]}
                loading={"eager"}
                fetchpriority={"high"}
                decoding={"sync"}
                class="notfound"
            />
            <span
                >The page you are looking for does not exist. You may check our
                <a href="/">Homepage</a>
            </span>
        </div>
    </main>
</BaseLayout>

<style>
    .wrapper-small {
        max-width: 400px;
        margin-inline: auto;
        margin-block: 1em;
    }

    .notfound {
        width: 300px;
        margin-inline: auto;
    }

    span {
        display: block;
        font-size: var(--fs-5);
        text-align: center;
        margin-block-start: 1.5em;
    }

    a {
        color: var(--clr-brand);
        text-decoration: underline;
        text-underline-offset: 5px;
        text-decoration-thickness: 2px;
    }
</style>
