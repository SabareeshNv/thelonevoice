---
const nav = [
    { text: "Home", link: "/" },
    { text: "Blog", link: "/blog" },
    { text: "About", link: "/about" },
    { text: "Contact", link: "/contact" },
];
---

<header class="shadow">
    <nav class="wrapper">
        <div class="brand"><a href="/">Lone Voice</a></div>
        <ul class="flex-row">
            {
                nav.map((item) => (
                    <li>
                        <a href={item.link}>{item.text}</a>
                    </li>
                ))
            }
        </ul>
    </nav>
</header>

<style>
    header {
        padding-block: 0.75rem;
    }

    nav {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.75rem;
        align-items: center;

        @media (min-width: 600px) {
            grid-template-columns: 1fr 2fr;
        }
    }

    .brand {
        font-size: var(--fs-6);
        font-family: var(--ff-serif);
        font-weight: 700;
        text-align: center;

        @media (min-width: 600px) {
            text-align: left;
        }
    }

    ul {
        list-style: none;
        padding: 0;
        width: 100%;
        align-items: center;
        justify-content: space-evenly;

        @media (min-width: 600px) {
            justify-content: flex-end;
            gap: 3rem;
        }
    }

    li a {
        font-size: var(--fs-4);

        &:hover,
        &:focus-visible {
            color: var(--clr-primary);
            text-decoration: underline;
            text-underline-offset: 5px;
            text-decoration-thickness: 2px;
        }
    }
</style>
