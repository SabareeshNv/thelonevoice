---
import { slugify } from "../utils/helpers";

const { tags } = Astro.props;
---

<article-tag-field>
    <div class="taged-under">Tags</div>
    <div class="tags flex-row">
        {tags.map((tag: string) => <a href={`/tag/${slugify(tag)}`}>#{tag}</a>)}
    </div>
</article-tag-field>

<style>
    article-tag-field {
        display: block;
        margin-block-end: 1.5rem;
    }

    .taged-under {
        color: var(--clr-brand);
        font-size: var(--fs-8);
        font-weight: 700;
        font-family: var(--ff-serif);
        margin-block-start: 1em; /* To override default typography margins */
        text-shadow: 1px 1px var(--clr-dark);
    }

    .tags {
        gap: 1em;
        margin-block-start: 0.5em; /* To override default typography margins */
    }

    .tags a {
        font-size: var(--fs-4);
        text-decoration: none;
        color: var(--clr-dark);
        background-color: var(--clr-accent);
        padding: 0.25em;
        border-radius: 0.25rem;

        &:hover {
            background-color: var(--clr-accent-hover);
        }
    }
</style>
