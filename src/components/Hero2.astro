---
import Date from "./Date.astro";
import { Picture, Image } from "astro:assets";

const { title, pubDate, coverImage, coverAlt } = Astro.props;
---

<section class="hero">
    <Image
        src={coverImage}
        alt={coverAlt}
        loading={"eager"}
        fetchpriority={"high"}
        decoding={"sync"}
        class="hero-image"
    />

    <div class="hero-wrapper">
        <div class="hero-content">
            <Date date={pubDate} class="hero-date" />
            <h1 class="hero-title">{title}</h1>
        </div>
    </div>
</section>

<style>
    .hero {
        position: relative;
    }

    .hero-image {
        width: 100%;
        height: 100%;
        max-height: 550px;

        filter: brightness(0.7);
        background-color: rgb(55, 65, 81);
        z-index: -1;
    }

    .hero-wrapper {
        max-width: 1024px;
        margin-inline: auto;
        padding-inline: 1rem;
        position: relative;
    }

    .hero-content {
        position: absolute;
        bottom: 2rem;
        color: var(--clr-light);

        @media (min-width: 600px) {
            bottom: 4rem;
        }
    }

    .hero-date {
        font-size: var(--fs-5);
    }

    .hero-title {
        font-size: var(--fs-9);
        font-family: var(--ff-serif);
        line-height: 1.2;
        margin-block-start: 0.25rem;

        @media (min-width: 900px) {
            margin-block-start: 0.5rem;
        }
    }
</style>
